{
	"extends": [
		"airbnb-base",
		"prettier",
		"prettier/react",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended",
		"plugin:react-hooks/recommended"
	],
	"plugins": ["prettier", "react", "import", "jsx-a11y", "react-hooks"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"rules": {
		"no-var": 2,
		"semi": 0,
		"no-console": 1,
		"no-unused-expressions": 0,
		"no-use-before-define": 0,
		"no-plusplus": 0,
		"no-loop-func": 0,
		"array-callback-return": 0,
		"no-shadow": 0,
		"no-return-assign": 0,
		"eqeqeq": 0,
		"class-methods-use-this": 0,
		"import/extensions": 0,
		"import/no-unresolved": 0,
		"import/prefer-default-export": 0,
		"react/prop-types": 0
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
